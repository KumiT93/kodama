<div class="school-container">

  <div class="school-search">
    <h2>School Ranking</h2>
    <div class="flex-grow-3 d-flex musician-search-bar" >
      <%#= form_tag schools_path, method: :get, class: 'search-form' do %>
        <%#= text_field_tag :query, params[:query], class: "form-home mr-sm-6 search-field", placeholder: "Price, Duration, Rating" %>
        <%#= button_tag(type: "submit", class: "btn search-btn") do %>
           <!-- <i class="fas fa-search awesome-search-color fa-lg"></i> -->
        <%# end %>
      <%# end %>
    </div>
  </div>

  <div class="row">

    <% counter = 1 %>
    <% @schools.first(10).each do |school| %>
      <div class="col-xs-1 col-md-12">
        <div class="school-index">
          <div class="r-school-card">
            <%= link_to school_path(school) do %>
            <div class="ranking-card">
              <div class="icon"><i class="fas fa-crown"></i> <%= counter %></div>
              <div><%= image_tag(school.logo, class: 'ranking-school-logo') %></div>
              <div class="r-school-description">
                <p class='r-school-name'>スクール名：<%= school.name %></p>
                <p class='r-school-detail'>location</p>
                <p class='r-school-detail'>stars</p>
              </div>
            </div>
              <% counter += 1 %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
