<div class="form-container">
  <!-- <div class="write-review">レビューを書く</div> -->
　　
  <div class="review-container">
    <div class="choose-school">
      <h3>スクール詳細</h3>
      <%= form_for @review do |f| %>
       <%= f.collection_select :school, School.all,:id,:name, include_blank: true, value: 'スクール名' %>
      <% end %>
    </div>

    <div class="rating">
      <h3 id=rating>Rating</h3>
      <%= form_for [@school, @review] do |f| %>

         <%= f.hidden_field :school_id, value: @school_id %>
        <div class="col-md-6 col-md-offset-3">

          <div class="field" id="star">
            <%= f.label :star %>
            <%= f.hidden_field :overall_rating, id: :review_star %>
          </div>

          <%#= f.text_area :impression, :class => "form-control", :size => "50x20"  %><br>
          <%= f.submit "レビュー評価", :class => "btn btn-primary" %>
         </div>
      <% end %>
      <script>
        console.log('hola');
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          scoreName: 'review[star]'
        });
      </script>
    </div>

    <div class="review-detail">
      <%= simple_form_for @review do |f| %>
        <%= f.input :レビュー, as: :text, input_html: { value: 'レビューを書く', style: 'color: #bbbbbb' } %>
    </div>

    <div class="authenticate">
        <%= f.input :authenticate, as: :string, input_html: { value: 'Mail or Github', style: 'color: #bbbbbb'} %>
    </div>

        <%= f.submit 'Submit', class: 'btn btn-primary form-submit' %>
      <% end %>
  </div>
</div>
